<%= stylesheet_link_tag 'companies' %>
<div class="registration">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class = "form-row">
      <label class="col-sm-2"><%= f.label "社名" %></label>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "email" %></label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "ホームページ" %></label>
      <%= f.text_field :HP, autofocus: true, autocomplete: "HP", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "パスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %></label>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "パスワード" %><span>(確認用)</span></label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3" %>
    </div><br>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
    </div><br>
  <% end %>

  <div class = "kotira">
  <h2>既に登録済みの方</h2>
  <p><%= link_to "こちら", new_company_session_path %>からログインしてください。</p>
  </div>
</div>
