<%= stylesheet_link_tag 'companies' %>
<div class="edit_user page">
  <h2>企業情報編集</h2>
  <div class="container">
    <%= form_with model: @company, url: {controller: 'public/companies', action: 'update' },local: true do |f| %>
      <div class = "form-row">
        <label class="col-sm-2"><%= f.label "社名(※必須)" %></label>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-sm-3" %>
      </div><br>

      <div class = "form-row">
        <label class = "col-sm-2"><%= f.label "ホームページ(※必須)" %></label>
        <%= f.text_field :hp, autofocus: true, autocomplete: "hp", class: "col-sm-3" %>
      </div><br>

      <div class = "form-row">
        <label class = "col-sm-2"><%= f.label "アイコン画像" %></label>
        <%= f.file_field :icon_img, autofocus: true, autocomplete: "icon_img", class: "col-sm-3" %>
      </div><br>

      <div class = "form-row">
        <label class = "col-sm-2"><%= f.label "企業紹介" %></label>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "col-sm-3" %>
      </div><br>

      <div class="actions">
        <%= f.submit "保存", class: "btn btn-success btn-lg" %>
      </div><br>
    <% end %>
    <%= link_to "Destroy", public_company_path(@company),class:"btn-company-destroy", method: :delete,data: { confirm: '本当に削除しますか？'} %>
  </div>
</div>
