<%= stylesheet_link_tag 'users' %>
<div class="edit_user">
  <h2>ユーザー情報編集</h2>

  <%= form_with model: @user, url: {controller: 'public/users', action: 'update' },lacal: true do |f| %>
    <div class = "form-row">
      <label class="col-sm-2"><%= f.label "登録名" %></label>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "email" %></label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class="col-sm-2"><%= f.label "都道府県" %></label>
      <%= f.select :prefectures, User.prefectures.keys, {prompt: "選択してください"}, autofocus: true, autocomplete: "prefectures", class: "col-sm-2" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "年齢" %></label>
      <%= f.number_field :age, autofocus: true, autocomplete: "age", class: "col-sm-2" %><span class = "col-sm-1">歳</span>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "あなたは就活生ですか？" %></label>
      <%= f.select :user_batch, [['はい',1],['いいえ',2]], class:"col-sm-2"%>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "アイコン画像" %></label>
      <%= f.file_field :icon_img, autofocus: true, autocomplete: "icon_img", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "あなたの価値観" %></label>
      <%= f.text_field :values, autofocus: true, autocomplete: "values", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "Twitterのリンク" %></label>
      <%= f.text_field :twitter_link, autofocus: true, autocomplete: "twitter_link", class: "col-sm-3" %>
    </div><br>

    <div class = "form-row">
      <label class = "col-sm-2"><%= f.label "自己紹介" %></label>
      <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "col-sm-3" %>
    </div><br>



    <div class="actions">
      <%= f.submit "保存", class: "btn btn-success btn-lg" %>
    </div><br>
  <% end %>
</div>
