<div class="row user_space">
  <% users.each do |user| %>
    <div class="col-sm-2 icon_img">
      <% if user.icon_img.present? %>
        <%= image_tag user.icon_img.to_s, class:"user_icon" %>
      <% else %>
        <%= image_tag '/assets/default_icon.jpg', class:"default_icon"%>
      <% end %>
    </div>
    <div class="col-sm-6">
      <div class="row name_space">
        <%= user.name %>
      </div>
      <div class="row intro_space">
        <%= user.introduction %>
      </div>
    </div>
    <div class="col-sm-2 user_batch">
      <%= render 'public/users/user_batch', user: user %>
    </div>
    <div class="col-sm-2 follow_btn">
      <% unless current_user == user %>
        <% if current_user.following?(user) %>
          <%= link_to "unfollow", public_user_unfollow_path(user.id),method: :delete,class: "btn btn-primary" %>
        <% else %>
          <%= link_to "follow",public_user_follow_path(user.id),method: :post,class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
