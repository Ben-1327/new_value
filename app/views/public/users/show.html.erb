<%= stylesheet_link_tag 'users' %>

<div class="user_show_page">
  <div class="main">
    <div class="row user_header">
      <div class="col-sm-1"></div>
      <div class="col-sm-2 icon_img">
        <% if @user.icon_img.nil? %>
          <%= image_tag @user.icon_img.to_s, class:"user_icon" %>
        <% else %>
          <%= image_tag '/assets/default_icon.jpg', class:"default_icon"%>
        <% end %>
      </div>
      <div class="col-sm-6 header_center">
        <div class="name_space">
          <h2><%= @user.name %></h2>
        </div>
        <div class="value_space">
          <%= @user.values %>
        </div>
      </div>
      <div class="col-sm-2 batch_space">
        <div class="user_batch">
          <%= render 'public/users/user_batch', user: @user %>
        </div>
        <div class="sns_link">
          <div class="twitter_link">
            <%= link_to @user.twitter_link do %>
              <%= icon("fab", "twitter") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row btn_space">
      <div class="col-8"></div>
      <div class="col-1">
        <%= link_to public_user_follow_list_path(@user) do %>
          <%= @user.follow_count %>フォロー
        <% end %>
      </div>
      <div class="col-1">
        <%= link_to public_user_follower_list_path(@user) do %>
          <%= @user.followers_count %>フォロワー
        <% end %>
      </div>
      <div class="col-1 follow_btn">
        <% unless current_user == @user %>
          <% if current_user.following? @user %>
            <%= link_to "unfollow", {controller: :follows,action: :unfollow,user_id: @user.id}, method: :put,class: "btn btn-primary" %>
          <% else %>
            <%= link_to "follow",{controller: :follows,action: :follow,user_id: @user.id}, method: :put,class: "btn btn-success" %>
          <% end %>
        <% end %>
      </div>
      <div class="col-1 dm_btn">
        <% unless @user.id == current_user.id %>
          <% if (current_user.followed_by? @user) && (@user.followed_by? current_user)  %>
            <% if @isRoom == true %>
              <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">DM</a>
            <% else %>
              <%= form_with model:@room, local: true do |f| %>
                <%= f.fields_for model:@entry do |e| %>
                  <%= e.hidden_field :user_id, value: @user.id %>
                <% end %>
                <%= f.submit "DM", class:"btn btn-primary btn-lg user-show-chat"%>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row introduction">
      <%= @user.introduction %>
    </div>
    <div class="row info">

    </div>
    <div class="row edit_space">
      <div class="col-sm-10"></div>
      <div class="col-sm-2 edit_btn">
        <%= link_to "edit", edit_public_user_path(@user), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="self_analyses_space">
      <h2><%= @user.name %>の自己分析</h2>
      <div class="self_analyses_card">
        <% @analysis_parts.each do |analysis_part| %>
          <div class="card border-dark mb-3" style="max-width: 18rem;">
            <div class="card-header"> <%= link_to analysis_part.part, public_user_part_index_path %> </div>
            <div class="card-body text-dark">
              <ul class="step_list card_text">
                <% i = 0 %>
                <% analysis_part.self_analyses.each do |self_analysis| %>
                  <% i += 1 %>
                  <li>Step.<%= i %><%= self_analysis.question %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- <div class="col-sm-3">
    <div id="list-example" class="row list-group">
      <% @analysis_parts.each do |analysis_part| %>
        <h4 class="list-group-item "> <%= link_to analysis_part.part, public_user_part_index_path, class: "link_text" %></h4>
      <% end %>
    </div>
  </div> -->
</div>
