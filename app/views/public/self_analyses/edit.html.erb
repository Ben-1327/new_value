<div class="self_analysis_edit page">
  <div class="title_part">
    <h1>編集</h1>
  </div>
  <div class="container">
    <div class="row form_space">
      <%= form_with model: @self_analysis,url: {controller: 'public/self_analyses', action: 'update' },local:true do |f| %>
        <div class="row part_form">
          <label class="col-sm-2"><%= f.label "編" %></label>
          <%= @self_analysis.question.analysis_part.part %>編
        </div>
        <div class="row step_form">
          <label class="col-sm-2"><%= f.label "step" %></label>
          <%= @self_analysis.question.step %>
        </div>
        <div class="row question_form">
          <label class="col-sm-2"><%= f.label "質問" %></label>
          <%= @self_analysis.question.question %>
        </div>
        <!-- 公開範囲設定 -->
        <div class="row range_form">
          <label class="col-sm-2"><%= f.label "公開範囲" %></label>
          <%= f.select :range, [['すべての人に公開',0],['フォロワーだけに公開',1],['自分だけに公開',2]], class:"col-sm-5"%>
        </div>
        <div class="row contents_form">
          <label class="col-sm-2"><%= f.label "内容" %></label>
          <div class="col-5 answer_form">
            <h4>回答<br></h4>
            <%= f.text_area :answer, placeholder:"あなたの回答を入力してください。" %>
          </div>
          <div class="col-5 analysis_form">
            <h4>回答の分析<br>(必須ではありません)</h4>
            <%= f.text_area :analysis, placeholder:"必須ではありません。左の回答から分かる分析を入力してください。" %>
          </div>
        </div>
        <%= f.submit "保存", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
