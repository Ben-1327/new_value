<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class ="form-row">
    <%= f.label :メールアドレス, class: "col-sm-offset-3 col-sm-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6" %>
</div><br>

<div class ="form-row">
    <%= f.label :パスワード, class: "col-sm-offset-3 col-sm-3" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-6" %>
</div><br>

<%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "新規登録", path, class:"btn btn-success" %>
<%= link_to "企業の方はこちら", path, class:"btn btn-info" %>
