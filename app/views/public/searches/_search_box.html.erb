<%= form_with url: public_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :search,placeholder: '検索' %>
    <%= f.select :option, [["ユーザー", "1"],["企業","2"],["投稿","3"]]%>
    <%= f.select :choice, [["完全一致", "1" ],["前方一致", "2" ],["後方一致", "3" ],["部分一致", "4" ]] %>
    <%= f.submit '検索' %>
<% end %>
