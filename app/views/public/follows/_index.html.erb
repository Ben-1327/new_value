<%= stylesheet_link_tag 'follows' %>

<div class="follow_index">
  <div class="row follow_bar">
    <div class="col-5"></div>
    <div class="col-1">
      <%= link_to "フォロー中", public_user_follow_list_path, class:"link_text" %>
    </div>
    <div class="col-1">
      <%= link_to "フォロワー", public_user_follower_list_path, class:"link_text" %>
    </div>
    <div class="col-5"></div>
  </div>
  <div class="row user_space">
    <% users.each do |user| %>
      <div class="col-sm-2 icon_img">
        <% if user.icon_img.present? %>
          <%= image_tag user.icon_img.to_s, class:"user_icon" %>
        <% else %>
          <%= image_tag '/assets/default_icon.jpg', class:"default_icon"%>
        <% end %>
      </div>
      <div class="col-sm-6">
        <%= link_to public_user_path(user), class:"link_text" do %>
          <div class="row name_space">
            <%= user.name %>
          </div>
        <% end %>
        <div class="row intro_space">
          <%= user.introduction %>
        </div>
      </div>
      <div class="col-sm-2 user_batch">
        <%= render 'public/users/user_batch', user: user %>
      </div>
      <div class="col-sm-2 follow_btn">
        <% unless current_user == user %>
          <% if current_user.following? user %>
            <%= link_to "unfollow", {controller: :follows,action: :unfollow,user_id: user.id}, method: :put,class: "btn btn-primary" %>
          <% else %>
            <%= link_to "follow",{controller: :follows,action: :follow,user_id: user.id}, method: :put,class: "btn btn-success" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
